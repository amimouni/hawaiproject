<div class="card">
  <% if livingroom.pictures.size != 0 %>
    <span class="card-bg" style='background-image:url(<%= livingroom.pictures.first.picture.url %>)'></span>
  <% else %>
    <span class="card-bg" style="background-image:url('http://www.new-home-design.net/wp-content/uploads/2012/02/25-Wooden-Home-Office-Design-Combine-with-Living-Room.jpg')"></span>
  <% end %>
  <span class="card-gradient"></span>
  <span class="card-category"><%= livingroom.city %></span>
  <span class="card-text">
    <h2><%= livingroom.title %></h2>
    <p><%= livingroom.price %>â‚¬</p>
    <p>
      <% livingroom.capacity.times do |n| %>
        <i class="fa fa-user"></i>
      <% end %>
    </p>
  </span>
  <span class="card-user">
      <img src="https://static.pexels.com/photos/7768/man-summer-outside-plant.jpg" class="avatar avatar-bordered"/>

  </span>
  <%= link_to "", livingroom_path(livingroom), class: "card-link" %>
</div>
