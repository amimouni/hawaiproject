<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Please leave a message to the host to finish your request</h1>
      <p>Reminder :</p>
      <ul>
        <li>Your Livingroom : <%= @livingroom.title %></li>
        <li>From <%= @booking.arrival_date %> to <%= @booking.departure_date %></li>
        <li>Total price : <%= @booking.total_amount %>â‚¬</li>
      </ul>
      </div>
      <div class="col-sm-6 col-sm-offset-3">
        <p>Please leave a message to the host</p>
        <%= simple_form_for [@livingroom, @booking] do |f| %>
          <%= f.input :message %>
          <%= f.input :arrival_date, :as => 'hidden', input_html: { value: @booking.arrival_date } %>
          <%= f.input :departure_date, :as => 'hidden', input_html: { value: @booking.departure_date } %>
          <%= f.input :total_amount, :as => 'hidden', input_html: { value: @booking.total_amount } %>
          <%= f.button :submit, 'Send request', class: "btn btn-danger" %>
        <% end %>
      </div>

